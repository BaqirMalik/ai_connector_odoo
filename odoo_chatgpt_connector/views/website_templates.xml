    <template id="connector" inherit_id="website.layout" name="AI Chat Connector">
        <xpath expr="//footer" position="inside">
<!--        <template id="connector" name="AI Chat Connector">-->
<!--            <t t-call="website.layout">-->
                <!-- Floating Chat Widget -->
                <div class="oe_chatter_floating">
                    <div class="oe_chatter_button" title="Chat with AI">
                        <i class="fa fa-comments"/>
                    </div>
                    <div class="oe_chatter_window" style="display: none;">
                        <div class="oe_chatter_header">
                            <span>AI Assistant</span>
                            <button class="oe_chatter_close btn btn-link">Ã—</button>
                        </div>
                        <div class="oe_chatter_messages"></div>
                        <div class="oe_chatter_input">
                            <input type="text" class="form-control" placeholder="Type your message..."/>
                            <button class="btn btn-primary oe_chatter_send">Send</button>
                        </div>
                    </div>
                </div>

                <style>
                    .oe_chatter_floating {
                    position: fixed;
                    bottom: 20px;
                    right: 20px;
                    z-index: 1001;
                    }


                    .oe_chatter_button {
                    width: 60px;
                    height: 60px;
                    background: #017e84;
                    color: white;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 24px;
                    cursor: pointer;
                    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                    transition: all 0.3s ease;
                    color:#fff;
                    }

                    .oe_chatter_button:hover {
                    transform: scale(1.1);
                    }

                    .oe_chatter_window {
                    width: 350px;
                    height: 450px;
                    background: white;
                    border-radius: 10px;
                    box-shadow: 0 4px 16px rgba(0,0,0,0.2);
                    display: flex;
                    flex-direction: column;
                    overflow: hidden;
                    }

                    .oe_chatter_header {
                    padding: 12px 16px;
                    background: #017e84;
                    color: white;
                    font-weight: bold;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    }

                    .oe_chatter_messages {
                    flex: 1;
                    padding: 15px;
                    overflow-y: auto;
                    background: #f9f9f9;
                    color:#000 !important;
                    }

                    .oe_chatter_input {
                    padding: 10px;
                    display: flex;
                    border-top: 1px solid #ddd;
                    background: white;
                    }

                    .oe_chatter_input input {
                    flex: 1;
                    margin-right: 8px;
                    border: 1px solid #ddd;
                    border-radius: 4px;
                    padding: 8px;
                    }

                    .message {
                    margin-bottom: 10px;
                    padding: 8px 12px;
                    border-radius: 8px;
                    max-width: 80%;
                    word-wrap: break-word;
                    }

                    .user-message {
                    background: #e3f2fd;
                    margin-left: auto;
                    border-bottom-right-radius: 0;
                    }

                    .ai-message {
                    background: #f1f1f1;
                    margin-right: auto;
                    border-bottom-left-radius: 0;
                    }

                    button.oe_chatter_close.btn.btn-link {
                    color: #fff;
                    font-size: 18px;
                    }
                </style>
<!--            </t>-->
